{
  "branches": [
    "main",
    { "name": "release", "prerelease": true },
    { "name": "develop", "prerelease": true }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "breaking": true, "release": "major" },
          { "type": "refactor!", "release": "major" },
          { "type": "feat!", "release": "major" },
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "scope": "no-release", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING-CHANGE", "BREAKING-CHANGES"]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],
    [
      "@semantic-release/github", 
      { 
        "successComment": "ðŸŽ‰ Release `${nextRelease.version}` publicada com sucesso!",
        "failComment": "âš ï¸ Falha ao publicar release, verifique os logs."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "jq '.version=\"${nextRelease.version}\"' composer.json > composer.tmp && mv composer.tmp composer.json"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "composer.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"        
      }
    ]
  ]
}
